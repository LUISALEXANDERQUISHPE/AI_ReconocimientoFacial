# ====================================
# CONFIGURACIÓN DE ENTORNO
# ====================================
# Copia este archivo a .env y completa los valores

# ---- Django ----
SECRET_KEY=tu-secret-key-super-segura-aqui-cambiar-en-produccion
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ---- MongoDB ----
# Opción 1: MongoDB Atlas (recomendado)
MONGODB_URI=mongodb+srv://USUARIO:PASSWORD@cluster.mongodb.net/
MONGODB_DB_NAME=face_recognition_system

# Opción 2: MongoDB Local
# MONGODB_URI=mongodb://localhost:27017/
# MONGODB_DB_NAME=face_recognition_system

# ---- Configuración de Reconocimiento ----
CONFIDENCE_THRESHOLD=0.90
TARGET_ENCODINGS=300
SAMPLE_IMAGES_COUNT=6

# ====================================
# NOTAS:
# ====================================
# 1. NO subas este archivo con credenciales reales a Git
# 2. SECRET_KEY debe ser único por instalación
# 3. En producción: DEBUG=False
# 4. MongoDB Atlas: whitelist tu IP en Network Access
